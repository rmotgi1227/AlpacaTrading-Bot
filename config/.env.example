# Alpaca API (paper trading)
# Get keys from https://app.alpaca.markets/paper/dashboard/overview
APCA_API_KEY_ID=your_paper_key_id
APCA_API_SECRET_KEY=your_paper_secret_key
# Use paper endpoint for paper trading; use https://api.alpaca.markets for live
APCA_API_BASE_URL=https://paper-api.alpaca.markets

# Optional: Data API base (defaults to Alpaca data)
# APCA_API_DATA_URL=https://data.alpaca.markets

# Email notifications (Gmail: use App Password, not account password)
NOTIFICATION_EMAIL_FROM=your_email@gmail.com
NOTIFICATION_EMAIL_APP_PASSWORD=your_app_password
NOTIFICATION_EMAIL_TO=recipient@example.com

# Optional: Twilio SMS (stubbed in v1; set to enable later)
# TWILIO_ACCOUNT_SID=
# TWILIO_AUTH_TOKEN=
# TWILIO_FROM_NUMBER=
# TWILIO_TO_NUMBER=
